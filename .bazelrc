# BuildBuddy Configuration
build:buildbuddy --remote_cache=grpcs://remote.buildbuddy.io
build:buildbuddy --remote_executor=grpcs://remote.buildbuddy.io
build:buildbuddy --remote_header=x-buildbuddy-api-key=YOUR_API_KEY_HERE

# Use BuildBuddy for build and test
build --config=buildbuddy

# Remote Execution Config
build:buildbuddy --jobs=100
build:buildbuddy --remote_download_minimal

# Platform Config
build:buildbuddy --platforms=//:rbe_ubuntu2004
build:buildbuddy --extra_execution_platforms=//:rbe_ubuntu2004
build:buildbuddy --host_platform=//:rbe_ubuntu2004
# build:buildbuddy --crosstool_top=@toolchains_buildbuddy//:toolchain
